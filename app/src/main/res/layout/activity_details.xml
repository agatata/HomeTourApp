<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/details_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/details_image_height"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/customPadding"
            android:scaleType="centerCrop"
            tools:image="@drawable/ic_pool_black_18dp" />

        <TextView
            android:id="@+id/details_title"
            style="@style/DetailTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/customPadding"
            android:paddingRight="@dimen/customPadding"
            android:paddingBottom="@dimen/halfPadding" />

        <TextView
            android:id="@+id/details_description"
            style="@style/DetailDescriptionStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/customPadding"
            android:paddingRight="@dimen/customPadding" />
    </LinearLayout>

</ScrollView>