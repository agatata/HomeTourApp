<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/details_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/details_image_height"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/customPadding"
            android:scaleType="centerCrop"
            tools:image="@drawable/ic_pool_black_18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_title"
            android:textAppearance="?android:textAppearanceLarge"
            tools:text="What to do" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_description"
            android:textAppearance="?android:textAppearanceMedium"
            tools:text="blablablablablabla some text here blablablabla" />
    </LinearLayout>

</ScrollView>